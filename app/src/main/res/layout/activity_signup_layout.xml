<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1595D"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/name"
        android:layout_marginLeft="30dp"
        android:id="@+id/img_name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignBottom="@+id/img_name"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/img_name"
        android:id="@+id/signUp_name"
        android:hint="请输入昵称"
        android:textColorHint="@color/white"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/password"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/img_name"
        android:layout_marginTop="15dp"
        android:id="@+id/img_password"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_password"
        android:layout_alignBottom="@+id/img_password"
        android:id="@+id/signUp_password"
        android:layout_below="@+id/signUp_name"
        android:hint="请输入密码"
        android:textColorHint="@color/white"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
        android:inputType="textPassword"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUp_password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:textColorHint="@color/white"
        android:id="@+id/signUp_email"
        android:hint="请输入邮箱"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注    册"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#F25C69"
        android:layout_below="@+id/signUp_email"
        android:id="@+id/bt_signUp"
        android:layout_gravity="center_horizontal" />
</RelativeLayout>